<Application
    x:Class="Quiz.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Quiz">

    <Application.Resources>
        <ResourceDictionary>
            
            <SolidColorBrush x:Key="myBackground" Color="#FF0097FF"/>
            
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="ButtonPressedBackgroundThemeBrush" Color="#FF0097FF"/>
                    <SolidColorBrush x:Key="ButtonDisabledBorderThemeBrush" Color="#FF0097FF"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>

